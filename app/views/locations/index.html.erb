<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Zip</th>
      <th>City</th>
      <th>Tenant firstname</th>
      <th>Tenant lastname</th>
      <th>Tenant since</th>
      <th>User</th>
      <th>Tenant email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.zip %></td>
        <td><%= location.city %></td>
        <td><%= location.tenant_firstname %></td>
        <td><%= location.tenant_lastname %></td>
        <td><%= location.tenant_since %></td>
        <td><%= location.user.email %></td>
        <td><%= location.tenant_email %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

